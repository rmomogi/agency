block content  
	.breadcrumb-holder
		.container-fluid
			ul.breadcrumb
				li.breadcrumb-item
					a(href="/") Home
				li.breadcrumb-item
					a(href="/books/") Livros
				li.breadcrumb-item.active
					span Novo

	section
		.container-fluid
			header
				h1.h3.display Livros

			.row
				.col-md-12.col-xs-12
					.card
						.card-header
							span Novo cadastro
						.card-body
							form(action="/books", method="post")
